<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="PlayButtonHolder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PlayButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BasicText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NormalText" parent="@style/BasicText">
        <item name="android:fontFamily">@font/wonderbar</item>
    </style>

    <style name="HeadingText" parent="@style/BasicText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/wonderbar</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FormulaText" parent="@style/NormalText">
        <item name="android:fontFamily">@font/friends</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BannerText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/wonderbar</item>
    </style>

    <style name="HorizontalRule">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CompletionImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EntryButton">
        <item name="android:fontFamily">@font/friends</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextInvert</item>
        <item name="android:background">@drawable/entry_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NumberText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/friends</item>
    </style>

    <style name="ScoreLevelText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/friends</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="AnswerBubble">
        <item name="android:fontFamily">@font/friends</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorTextInvert</item>
        <item name="android:background">@drawable/thought</item>
        <item name="android:layout_width">118dp</item>
        <item name="android:layout_height">126dp</item>
        <item name="android:paddingStart">-5dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DifficultyButton" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/friends</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DifficultyButtonSelected" parent="DifficultyButton">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TimerBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

</resources>
